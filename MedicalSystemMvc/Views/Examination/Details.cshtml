@model MedicalSystemClassLibrary.Models.Examination

@{
    ViewData["Title"] = "Examination Details";
}

<h2>Examination Details</h2>

<div>
    <h4>Examination</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Model.Type
        </dd>
        <dt class="col-sm-2">
            Patient ID
        </dt>
        <dd class="col-sm-10">
            @Model.PatientId
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
